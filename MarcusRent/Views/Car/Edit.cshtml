@model MarcusRent.Models.CarViewModel

<h2>Redigera bil</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CarId" />





    <div class="form-group">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PricePerDay"></label>
        <input asp-for="PricePerDay" class="form-control" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Bilder</label>
        @for (int i = 0; i < Model.ImageUrls?.Count; i++)
        {
            <div class="mb-2">
                <input type="text" name="ImageUrls[@i]" value="@Model.ImageUrls[i]" class="form-control" />
            </div>
        }

        <div class="form-group form-check">
            <input asp-for="Available" class="form-check-input" />
            <label asp-for="Available" class="form-check-label">Tillgänglig</label>
        </div>


        <!-- Lägg till tomma rader för att lägga till nya länkar -->
        @for (int i = Model.ImageUrls?.Count ?? 0; i < (Model.ImageUrls?.Count ?? 0) + 3; i++)
        {
            <div class="mb-2">
                <input type="text" name="ImageUrls[@i]" class="form-control" placeholder="Ny bildlänk..." />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Spara</button>
    <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
